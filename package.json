{
  "name": "csr-api",
  "version": "1.0.0",
  "description": "Restaurant Management System API",
  "main": "dist",
  "scripts": {
    "db:start": "docker run -d -p 3001:27017 --name CSR-Database -v urlShort:/data/db mongo",
    "db:stop": "docker stop CSR-Database & docker rm CSR-Database",
    "prebuild": "rimraf ./dist & npm run lint",
    "build": "babel src -D -d dist",
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "lint": "eslint src --fix",
    "dev": "nodemon  -L src/bin/www -w src -i **/test.js  -x babel-node",
    "test": "mocha --timeout 15000 src/**/*.test.js --compilers js:babel-core/register ",
    "test:jest": "jest --watch",
    "docker:dev": "docker-compose up -d & docker attach CSR-API",
    "docker:rm": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chennai-spice/api.git"
  },
  "keywords": [
    "url",
    "shortening"
  ],
  "author": "Mohamed Jubair <amzubair@live.com> (http://www.amzubair.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chennai-spice/api/issues"
  },
  "homepage": "https://github.com/chennai-spice/api#readme",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-preset-env": "^1.3.2",
    "chai": "^3.5.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "jest": "^19.0.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.1",
    "chalk": "^1.1.3",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "helmet": "^3.5.0",
    "moment": "^2.18.1",
    "mongoose": "^4.9.3",
    "morgan": "^1.8.1",
    "rest": "^2.0.0",
    "validator": "^7.0.0"
  }
}
